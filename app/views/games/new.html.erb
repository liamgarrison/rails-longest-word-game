<div class="container">
  <h1>New Game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <span class="letter">
        <%= letter %>
      </span>
    <% end %>
  </div>
  <p>What's the longest word you can find?</p>
  <form action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :given_letters, @letters.join %>
    <input type="text" name="guessed_letters">
    <input type="submit" value="submit">
  </form>
</div>
